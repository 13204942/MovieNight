<p>HOT</p>
<%= link_to 'Home', root_path %>
<%= link_to 'Hot Movies', movies_hot_path %>
<%= link_to 'Coming Soon', movies_comingsoon_path %>
<%= link_to 'Weekly Top Movies', movies_weekly_path %>
<table>
	<thead>
		<tr>
			<th>Image</th>
			<th>Title</th>
			<th>Original Title</th>
			<th>Rating</th>
			<th>Duration</th>
			<th>Year</th>
		</tr>
	</thead>

	<tbody>
		<% @hotmovies.each do |movie| %>
			<tr>
				<td><%= image_tag movie['images']['small']%></td>
				<td><%= movie['title']%></td>
				<td><%= movie['original_title']%></td>
				<td><%= movie['rating']['average']%></td>
				<td><%= movie['durations'][0]%></td>
				<td><%= movie['year']%></td>
			</tr>
		<% end %>
	</tbody>
</table>