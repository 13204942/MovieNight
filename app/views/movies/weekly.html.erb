<p>WEEKLY</p>
<%= link_to 'Home', root_path %>
<%= link_to 'Hot Movies', movies_hot_path %>
<%= link_to 'Coming Soon', movies_comingsoon_path %>
<%= link_to 'Weekly Top Movies', movies_weekly_path %>
<table>
	<thead>
		<tr>
			<th>Image</th>
			<th>Title</th>
			<th>Original Title</th>
			<th>Rating</th>
			<th>Duration</th>
			<th>Year</th>
		</tr>
	</thead>

	<tbody>
		<% @weeklymovies.each do |movie| %>
			<tr>
				<td><%= image_tag movie['subject']['images']['large']%></td>
				<td><%= movie['subject']['title']%></td>
				<td><%= movie['subject']['original_title']%></td>
				<td><%= movie['subject']['rating']['average']%></td>
				<td><%= movie['subject']['durations'][0]%></td>
				<td><%= movie['subject']['year']%></td>
			</tr>
		<% end %>
	</tbody>
</table>